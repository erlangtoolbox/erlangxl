{version, {shell, "../version.sh"}}.

{build, {shell, "printf '%d' $BUILD_NUMBER"}}.

{libraries, ["../lib", "../out/production"]}.

{compile, [
    {resources, ["*.txt"]},
    {flags, [warnings_as_errors, debug_info]}
]}.

{profiles, [
    {rpm, [
        {perform, [rpm, package]}
    ]}
]}.

{rpm, [
    {spec, [
        {header, [
            {'Summary', "ErlangXL / xl_io "},
            {'License', "Proprietary"},
            {'Group', "Development"},
            {'BuildArch', "noarch"},
            {'Requires', erlang},
            {'Requires', xl_stdlib},
            {'Requires', erlandox}
        ]},
        {description, "ErlangXL / xl_io"}
    ]}
]}.
