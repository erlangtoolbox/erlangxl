{subdirs, [
    "xl_stdlib",
    "xl_eunit",
    "xl_io",
    "xl_csv",
    "xl_leveldb",
    "xl_net",
    "xl_json",
    "xl_json_binder_test",
    "xl_yaws",
    "persist",
    "epath"
]}.

{profiles, [
    {default, [
        {prepare, [clean, depends]},
        {perform, []}
    ]},
    {rpm, [
        {prepare, [clean, rpm_depends]},
        {perform, []}
    ]}
]}.

{depends, [
    {dir, "./lib"},
    {repositories, [
        {"http://build.strikead.com:8081/repo", [
            {erlandox, "1.0.0"},
            {ktuo, "0.5.0.0.0015"},
            {ebt, "1.0.1.0043"}
        ]}
    ]}
]}.

{rpm_depends, [
    {dir, "./lib"},
    {specs, [
        {erlandox, [
            {header, [
                {'Summary', "ErlandoX"},
                {'License', "Erlang Public License"},
                {'Group', "Development"},
                {'BuildArch', "noarch"},
                {'Requires', erlang}
            ]},
            {description, "ErlandoX"}
        ]},
        {ktuo, [
            {header, [
                {'Summary', "KTUO"},
                {'License', "Permissive"},
                {'Group', "Development"},
                {'BuildArch', "noarch"},
                {'Requires', erlang}
            ]},
            {description, "KTUO"}
        ]}
    ]}
]}.
