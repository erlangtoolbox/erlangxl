{version, {shell, "../version.sh"}}.
{libraries, ["../lib", "../out/production"]}.
{compile, [
    {resources, ["*.csv", "*.index"]},
    {flags, [warnings_as_errors, debug_info]}
]}.

{profiles, [
    {rpm, [
        {perform, [otpapp, rpm]}
    ]}
]}.

{rpm, [
    {spec, [
        {header, [
            {'Summary', "ErlangXL / xl_csv "},
            {'License', "Proprietary"},
            {'Group', "Development"},
            {'BuildArch', "noarch"},
            {'Requires', erlang},
            {'Requires', xl_stdlib},
            {'Requires', xl_io},
            {'Requires', erlandox}
        ]},
        {description, "ErlangXL / xl_csv"}
    ]}
]}.
