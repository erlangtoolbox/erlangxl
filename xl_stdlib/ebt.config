{version, {shell, "../version.sh"}}.

{libraries, ["../lib"]}.

{compile, [
    {flags, [warnings_as_errors, debug_info]}
]}.

{profiles, [
    {rpm, [
        {perform, [otpapp, rpm]}
    ]}
]}.

{rpm, [
    {spec, [
        {header, [
            {'Summary', "ErlangXL / xl_stdlib "},
            {'License', "Proprietary"},
            {'Group', "Development"},
            {'BuildArch', "noarch"},
            {'Requires', erlang},
            {'Requires', erlandox}
        ]},
        {description, "ErlangXL / xl_stdlib"}
    ]}
]}.
